<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ClassManager.ViewModels"
             x:Class="ClassManager.Views.LoginPage"
             x:DataType="vm:LoginPageViewModel"
             Title="LoginPage"
             NavigationPage.HasNavigationBar="False">

    <ContentPage.Background>
        <LinearGradientBrush>
            <GradientStop Color="#1FFFD2" Offset="0.2"/>
            <GradientStop Color="#1FBCFF" Offset="0.5"/>
            <GradientStop Color="#1F4CFF" Offset="1.0"/>
        </LinearGradientBrush>
    </ContentPage.Background>
    
    <VerticalStackLayout VerticalOptions="Center"
                         Spacing="15"
                         Margin="15">

        <Label 
            Text="Class Manager Application"
            HorizontalOptions="Center"
            FontSize="Title"/>

        <Label 
            Text="Login" 
            HorizontalOptions="Center"
            FontSize="Subtitle"/>

        <Label Text="Email:"/>
        <Entry Text="{Binding Username}"/>

        <Label Text="Senha:"/>
        <Entry Text="{Binding Password}"
               IsPassword="True"/>

        <Button 
            x:Name="btn_logar"
            Text="Logar"
            Command="{Binding LoginCommand}"/>

        <Label 
            Text="Ainda nÃ£o esta cadastrado?"
            HorizontalOptions="Center"/>
        <Button 
            x:Name="btn_cadastrar"
            Text="Cadastrar"
            Command="{Binding CadastroCommand}"/>


    </VerticalStackLayout>
</ContentPage>