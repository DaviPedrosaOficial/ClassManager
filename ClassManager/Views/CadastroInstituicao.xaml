<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ClassManager.ViewModels"
             x:DataType="vm:CadastroInstituicaoViewModel"
             x:Class="ClassManager.Views.CadastroInstituicao">

    <NavigationPage.TitleView>
        <Label Text="Cadastro de Instituição" HorizontalTextAlignment="Start" VerticalTextAlignment="Center" FontSize="Title" FontAttributes="Bold" Padding="10,0,0,0"/>
    </NavigationPage.TitleView>

    <ContentPage.Background>
        <LinearGradientBrush>
            <GradientStop Color="#1FFFD2" Offset="0.2"/>
            <GradientStop Color="#1FBCFF" Offset="0.5"/>
            <GradientStop Color="#1F4CFF" Offset="1.0"/>
        </LinearGradientBrush>
    </ContentPage.Background>

    <VerticalStackLayout Margin="15"
                         Spacing="15"
                         VerticalOptions="Center">
        <Label 
            Text="Nome da Instituição:"
            VerticalOptions="Center" 
            HorizontalOptions="Start" 
            FontSize="Medium"/>
        <Entry Text="{Binding NomeInstituicao}"/>

        <Button Text="Cadastrar"
                Command="{Binding CadastrarInstituicaoCommand}"/>

    </VerticalStackLayout>
</ContentPage>