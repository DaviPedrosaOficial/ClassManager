<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ClassManager.ViewModels"
             x:DataType="vm:InstituicaoPageViewModel"
             x:Class="ClassManager.Views.InstituicaoPage"
             Title="{Binding Instituicao_do_client.Nome}">
    <ContentPage.Background>
        <LinearGradientBrush>
            <GradientStop Color="#1FFFD2" Offset="0.2"/>
            <GradientStop Color="#1FBCFF" Offset="0.5"/>
            <GradientStop Color="#1F4CFF" Offset="1.0"/>
        </LinearGradientBrush>
    </ContentPage.Background>

    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>